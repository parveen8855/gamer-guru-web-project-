<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GameGuru</title>
    <link rel="stylesheet" href="css/login.css">
</head>

<body>
    <nav class="nav-top">
        <div class="nav-left">
            <img src="/images final/logo.png" alt="">
            <div><a href="/">GAMER GURU</a></div>
        </div>
    </nav>
    <section class="signup">
        <div class="form">
            <h1>
                LOG IN TO <span>GAMER GURU</span>
            </h1>

            <div class="form-input">
                <form action="/login" method="POST">
                    <div class="email">
                        <label id="emaill">Email Address</label><br>
                        <input type="email" id="email" name="email" required>
                    </div>

                    <div class="password">
                        <label id="passs">Password (at least 8 characters)</label><br>
                        <input class="input-box2" type="password" id="pass" name="password" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters">
                    </div>

                    <div class="checkbox-1 checkbox" id="checkbox">
                        <input type="checkbox" name="terms" required>
                        <label>I agree to Gamer Guru's Terms of Conditions and Privacy Policy, and am 13<br> years of
                            age or older.</label>
                    </div>
                    <div class="checkbox-2 checkbox" required>
                        <input type="checkbox" name="notifications">
                        <label>I would like to receive email updates and promotions from Gamer Guru. </label>
                    </div>
                    <div class="submit">
                        <input type="submit" name="submit" value="login" >
                    </div>
                </form>
            </div>
        </div>
    </section>
    <footer>
        <div class="footer-logo"><img src="/images final/logo.png" alt=""></div>
        <div class="footer-text">GAMER GURU</div>
